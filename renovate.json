{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:base"
    ],
    "timezone": "Asia/Tokyo",
    "prHourlyLimit": 0,
    "rangeStrategy": "bump",
    "lockFileMaintenance": {
      "enabled": true,
      "automerge": true
    },
    "packageRules": [
      {
        "matchUpdateTypes": [
          "minor",
          "patch"
        ],
        "matchCurrentVersion": "!/^0/",
        "automerge": true
      }
    ],
    "prConcurrentLimit": 5
}
